<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg rounded-5 bg-blue">
        <div class="card-body">
          <%= form_with model: @order, local: true, class: "row g-3" do |f| %>
            <div class="col-md-6">
              <%= f.label :price, "Book Title", class: "form-label" %>
              <%= f.text_field :price, value: @book.title , class: "form-control", readonly: true %>
            </div>
            <div class="col-md-6 d-none">
              <%= f.label :book_id, "Libro", class: "form-label" %>
              <%= f.text_field :book_id, value: params[:id], class: "form-control" %>
            </div>
            <div class="col-md-6">
              <%= f.label :quantity, "Cantidad", class: "form-label" %>
              <%= f.number_field :quantity, class: "form-control", min: 1, value: 1 %>
            </div>
            <div class="col-md-12 text-center">
              <%= f.submit "Crear Pedido", class: "btn btn-primary", data: { turbo_frame: "_top" } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
