<div class="container">
  <h1 class="mt-4">BookStore</h1>
  <h2>ยก<strong>Book</strong> for all ages, a bookstore where all your senses can travel.</h2>

  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <div>
              <%= image_tag(book.img_url, class:'img-url') %>
            </div>
            <p class="card-text"><%= truncate(book.synopsis, length: 100) %></p>
            <p><strong>Author:</strong> <%= book.author %></p>
            <p><strong>Genro:</strong> <%= book.genre %></p>
            <p><strong>Price:</strong> $<%= book.price %></p>
            <a href="<%= book_path(book) %>" class="btn btn-primary">Details</a>
            <a class="btn btn-success mt-0" href="/books_buy/151/buy">Buy Book</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

