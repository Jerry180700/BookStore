<div class="container">
  <div class="row mt-4">
    <div class="col-md-8">
      <h1><%= @book.title %></h1>
      <p><strong>Author:</strong> <%= @book.author %></p>
      <p><strong>Genre:</strong> <%= @book.genre %></p>
      <p><strong>Synopsis:</strong><p><%= @book.synopsis %></p>
      <p><strong>Price:</strong> $<%= @book.price %></p>

      <%= link_to 'Back to list book', books_path, class: 'btn btn-secondary mt-3' %>
      <%= link_to 'Buy Book', buy_book_path(@book.id), class: 'btn btn-success mt-3' %>
    </div>

    <div class="col-md-4">
    </div>
  </div>
</div>
