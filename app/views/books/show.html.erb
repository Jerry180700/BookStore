<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-center">
            <%= image_tag(@book.img_url.presence) %>
          </div>
            <h1 class="mt-3 text-center"><%= @book.title %></h1>
            <p><strong>Author:</strong> <%= @book.author %></p>
            <p><strong>Genre:</strong> <%= @book.genre %></p>
            <p><strong>Synopsis:</strong><p><%= @book.synopsis %></p>
            <p><strong>Price:</strong> $<%= @book.price %></p>

          <div class="d-flex justify-content-between mt-3">
            <%= link_to 'Back to list book', books_path, class: 'btn btn-secondary' %>
            <%= link_to 'Buy Book', buy_book_path(@book.id), class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
