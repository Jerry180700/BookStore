<%= simple_form_for @book, html: { class: 'form-horizontal' } do |form| %>
  <div class="form-group">
    <%= form.input :title, label: "Título del Libro", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.input :author, label: "Autor", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.input :genre, label: "Género", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.input :price, label: "Precio", as: :decimal, input_html: { step: 0.01, class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.input :synopsis, label: "Sinopsis", as: :text, input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.button :submit, "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>
